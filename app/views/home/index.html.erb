  <% if admin_signed_in? %>
    <div>
      <%= link_to('Cadastrar Lotes', new_auction_lot_path) %>
    </div>
  <% end %>

  <h2> Lotes em andamento: </h2>
  <% @ongoing_auction_lots.each do |auction| %>
    <div>
      <h3>Lote: <%= link_to(auction.code, auction_lot_path(auction.id)) %></h3>
      <dl>
        <dt><%= AuctionLot.human_attribute_name(:status) %></dt>
        <dd><%= I18n.translate(auction.status) %></dd>
      </dl>
    </div>
  <% end %>

  <% if @ongoing_auction_lots.empty? %>
    <p>Não existem lotes em andamento</p>
  <% end %>

  <h2> Lotes futuros: </h2>
  <% @future_auction_lots.each do |auction| %>
    <div>
      <h3>Lote: <%= link_to(auction.code, auction_lot_path(auction.id)) %></h3>
      <dl>
        <dt><%= AuctionLot.human_attribute_name(:status) %></dt>
        <dd><%= I18n.translate(auction.status) %></dd>
        <dt>Data de Início:</dt>
        <dd>Começa em <%= distance_of_time_in_words(Date.today, auction.start_date) %></dd>
      </dl>
    </div>
  <% end %>

  <% if @future_auction_lots.empty? %>
    <p>Não existem lotes futuros</p>
  <% end %>