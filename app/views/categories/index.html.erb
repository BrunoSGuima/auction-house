<%= link_to 'Nova Categoria', new_category_path %>
<h2>Categorias cadastradas:</h2>
<ul>
  <% @categories.each do |cat| %>
    <li>
      <div>
        <span><%= cat.name %></span>
        <%= link_to 'Editar', edit_category_path(cat) %>
      </div>
    </li>
  <% end %>
</ul>

<div><%= link_to('Voltar', root_path) %></div>

