<%= form_with(model: [@product]) do |f| %>
  <div class="row">
    <div class="col-md-8">
      <%= f.label :product_model_id, 'Produto' %>
      <%= f.collection_select :product_model_id, @products, :id, :name, {}, {class: 'form-control'} %>
