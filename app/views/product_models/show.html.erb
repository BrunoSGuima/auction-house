<h3> Produtos <%= @product_model.name %> - <%= link_to('Editar', edit_product_model_path)%></h3>
	
  <dl>
    	<% if @product_model.image_url.present? %>
  			<%= image_tag @product_model.image_url %>
			<% else %>
  			<p>Imagem não disponível</p>
			<% end %>
			
			<dt> Nome: </dt>
    	<dd><%= @product_model.name %> </dd>
      <dt> Descrição: </dt>
    	<dd><%= @product_model.description %> </dd>
      <dt> Código: </dt>
    	<dd><%= @product_model.code %> </dd>
      <dt> Peso: </dt>
    	<dd><%= @product_model.weight %>g </dd>
    	<dt> Dimensão: </dt>
    	<dd> <%= @product_model.width %>cm x <%= @product_model.height%>cm x <%= @product_model.depth %>cm </dd>
			<dt> Categoria: </dt>
    	<dd><%= @product_model.category.name %> </dd>
	</dl>


<%= link_to('Voltar', product_models_path) %>