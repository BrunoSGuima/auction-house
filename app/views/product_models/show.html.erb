  		<%= image_tag url_for(@product_model.image) %>
		<% end %>
			<dt><%= ProductModel.human_attribute_name(:name)%></dt>
    	<dd><%= @product_model.name %> </dd>
      <dt><%= ProductModel.human_attribute_name(:description)%></dt>
