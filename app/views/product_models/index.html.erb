<h1><%= ProductModel.model_name.human %></h1>

<% if admin_signed_in? %>
  <%= link_to 'Cadastrar Novo', new_product_model_path %> 
  <% if ProductModel.exists? %>
    | <%= link_to 'Adicionar Item', new_product_path %>
  <% end %>
<% end %>

<% if @product_models.any? %>
  <div class="row">
    <% @product_models.each do |pm| %>
      <div class="col-lg-3 mb-4">
        <div>
          <h2><%= link_to pm.name, product_model_path(pm) %></h2>
          <dl>
            <dt><%= ProductModel.human_attribute_name(:code)%></dt>
            <dd><%= pm.code %></dd>
            <dt><%= ProductModel.human_attribute_name(:description)%></dt>
            <dd><%= pm.description %></dd>
            <dt><%= ProductModel.human_attribute_name(:category)%></dt>
            <dd><%= pm.category.name %></dd>
            <% if admin_signed_in? %>
              <dt><%= ProductModel.human_attribute_name(:products_available_count)%></dt>
              <dd><%= pm.products_available_count %></dd>
            <% end %>
          </dl>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Nenhum produto cadastrado.</p>
<% end %>

<%= link_to('Voltar', root_path) %>

